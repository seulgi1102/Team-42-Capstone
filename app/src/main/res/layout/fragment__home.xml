<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Home"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="식물을 등록해요"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center|right|bottom"
                    android:text="최근 등록된 식물들"
                    android:textColor="#B1B1B1"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <android.widget.Button
                    android:id="@+id/button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_enroll"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="50dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:scrollbarSize="0dp"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    android:scrollbars="horizontal" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text=" 어서와 식물은 처음이지? 입문용 식물 Top3!"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:id="@+id/recommendedPlant1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_radius"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/plantImage1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/radius_clear"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/recommendplant1" />

                    <TextView
                        android:id="@+id/plantName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="산세베리아"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recommendedPlant2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/background_radius"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/plantImage2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/radius_clear"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/recommendplant2" />

                    <TextView
                        android:id="@+id/plantName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="스투키"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recommendedPlant3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_radius"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/plantImage3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/radius_clear"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/recommendplant3" />

                    <TextView
                        android:id="@+id/plantName3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="페페로미아"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=" 올타임 최고의 선택! 인기순 식물 Top3!"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:id="@+id/recommendedPlant4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_radius"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/plantImage4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/radius_clear"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/recommendplant4" />

                    <TextView
                        android:id="@+id/plantName4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="몬스테라"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recommendedPlant5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/background_radius"
                    android:layout_marginRight="10dp"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/plantImage5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/radius_clear"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/recommendplant5" />

                    <TextView
                        android:id="@+id/plantName5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="스파티필름"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recommendedPlant6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/background_radius"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/plantImage6"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/radius_clear"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/recommendplant6" />

                    <TextView
                        android:id="@+id/plantName6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="파키라"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text=" 플랜터 입문하기!"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step1"
                        android:layout_weight="1"
                        android:background="@drawable/background_radius"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/background_radius"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/step1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <TextView
                                android:id="@+id/stepTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Step 1."
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/stepContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="&quot;반려 식물 찾기&quot;"
                                android:textSize="9sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step2"
                        android:layout_weight="1"
                        android:background="@drawable/background_radius"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/background_radius"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/step2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/stepTitle2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Step 2."
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/stepContent2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="&quot;식물의 집 마련하기&quot;"
                                android:textSize="9sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/step3"
                        android:layout_weight="1"
                        android:background="@drawable/background_radius"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/background_radius"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/step3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/stepTitle3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Step 3."
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/stepContent3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="&quot;식물을 배치하기&quot;"
                                android:textSize="9sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/step4"
                        android:layout_weight="1"
                        android:background="@drawable/background_radius"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/background_radius"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/step4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/stepTitle4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Step 4."
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/stepContent4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="&quot;적절하게 물주기&quot;"
                                android:textSize="9sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/step5"
                        android:layout_weight="1"
                        android:background="@drawable/background_radius"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/background_radius"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/step5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/stepTitle5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Step 5."
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/stepContent5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:ems="5"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="&quot;건강하게 관리하기&quot;"
                                android:textSize="9sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>