<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#6DF8B7"
        android:text="플랜텀"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="513dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디" />

        <EditText
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="홍길동"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="비밀번호" />

        <EditText
            android:id="@+id/signUpPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="**********"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/alarmPwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="영문, 숫자, 특수문자 조합으로 10자리 이상 입력해주세요 "
            android:textColor="#A8A8A8"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="**********"
            android:inputType="text" />

        <TextView
            android:id="@+id/alarmPwd3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#A8A8A8"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="abc@naver.com"
            android:inputType="text" />

        <TextView
            android:id="@+id/alarmEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A8A8A8"
            android:visibility="gone" />
        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="생년월일" />

        <EditText
            android:id="@+id/birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="YYYYMMDD"
            android:inputType="text" />
        <TextView
            android:id="@+id/alarmBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="생년월일을 형식(yyyyMMdd)에 맞게 입력해주세요"
            android:textColor="#A8A8A8"
            android:visibility="gone" />
        <TextView
            android:id="@+id/goToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="로그인" />

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/signUpBtn"
        android:layout_width="158dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle"
        android:layout_marginTop="10dp"
        android:text="회원가입" />

</LinearLayout>