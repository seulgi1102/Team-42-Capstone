<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 검은색 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- 테두리 색상 -->
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>

            <corners
                android:radius="15dp"
                />
        </shape>
    </item>

</layer-list>